{
    "elmType": "div",
    "style": {
        "flex-direction": "row",
        "min-height": "100px",
        "width": "100%",
        "margin-bottom": "10px"
    },
    "attributes": {
        "class": "ms-fontColor-themeTertiary"
    },
    "children": [
        {
            "elmType": "div",
            "style": {
                "margin": "10px",
                "width": "100%",
                "align-items": "center",
                "justify-content": "center",
                "display": "flex"
            },
            "attributes": {
                "class": "ms-bgColor-themeTertiary ms-fontColor-white"
            },
            "children": [
                {
                    "elmType": "div",
                    "style": {
                        "margin": "20px",
                        "width": "100%",
                        "height": "100%",
                        "border": "0px dashed",
                        "flex-direction": "column",
                        "align-items": "left"
                    },
                    "children": [
                        {
                            "elmType": "div",
                            "style": {
                                "padding-top": "5px",
                                "padding-left": "5px",
                                "text-align": "left"
                            },
                            "attributes": {
                                "class": "ms-fontSize-28"
                            },
                            "children": [
                                {
                                    "elmType": "span",
                                    "style": {
                                        "padding-right": "10px"
                                    }
                                },
                                {
                                    "elmType": "span",
                                    "txtContent": "=[$Title]"
                                }
                            ]
                        },
                        {
                            "elmType": "div",
                            "style": {
                                "display": "flex",
                                "width": "100%",
                                "min-height": "50px",
                                "flex-wrap": "wrap",
                                "align-items": "left"
                            },
                            "attributes": {
                                "class": "ms-fontSize-14 ms-fontColor-themePrimary"
                            },
                            "children": [
                                {
                                    "elmType": "div",
                                    "style": {
                                        "border-radius": "10px",
                                        "padding": "5px 10px 5px 10px",
                                        "white-space": "nowrap",
                                        "margin": "5px",
                                        "align-items": "center",
                                        "line-height": "14px",
                                        "display": "flex"
                                    },
                                    "attributes": {
                                        "class": "ms-bgColor-white"
                                    },
                                    "children": [
                                        {
                                            "elmType": "span",
                                            "style": {
                                                "padding-right": "5px"
                                            },
                                            "attributes": {
                                                "iconName": "=if(length([$Inpossession]) == 0 , 'Lock' , 'ContactLock')"
                                            }
                                        },
                                        {
                                            "elmType": "span",
                                            "txtContent": "=if(length([$Inpossession]) == 0 , 'Secured in cupboard' , 'In possession: ' + [$Inpossession.title])"
                                        }
                                    ]
                                },
                                {
                                    "elmType": "div",
                                    "style": {
                                        "border-radius": "10px",
                                        "padding": "5px 10px 5px 10px",
                                        "white-space": "nowrap",
                                        "margin": "5px",
                                        "align-items": "center",
                                        "line-height": "14px",
                                        "display": "flex"
                                    },
                                    "attributes": {
                                        "class": "ms-bgColor-white"
                                    },
                                    "children": [
                                        {
                                            "elmType": "span",
                                            "style": {
                                                "padding-right": "5px"
                                            },
                                            "attributes": {
                                                "iconName": "=if(length([$NotMarked]) == 0 , 'FullCircleMask' , 'CircleHalfFull')",
                                                "class": "=if(length([$NotMarked]) == 0 , 'ms-fontColor-green' , 'ms-fontColor-red')"
                                            }
                                        },
                                        {
                                            "elmType": "span",
                                            "txtContent": "=if(length([$NotMarked]) == 0 , 'Fully marked' , 'Not yet fully marked')"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
