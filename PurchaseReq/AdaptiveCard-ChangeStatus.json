{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "msteams": {
        "width": "Full"
    },
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "People",
                            "url": "https://normanhurb-h.schools.nsw.gov.au/content/dam/doe/sws/schools/n/normanhurb-h/icons/Dollar.png",
                            "width": "75px",
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "https://education.nsw.gov.au",
                                "id": "11"
                            }
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**Purchase Request Status Update**: @{outputs('Get_item')?['body/RequestID']}",
                            "weight": "Bolder",
                            "size": "Large",
                            "wrap": true,
                            "color": "Attention",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "@{outputs('Update_item')?['body/Title']}",
                            "wrap": true,
                            "spacing": "None",
                            "color": "Accent",
                            "weight": "Bolder",
                            "size": "Large"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ],
            "style": "warning",
            "bleed": true
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "separator": true,
            "size": "Small",
            "text": "Please note the Purchase Request for the following item has been updated.",
            "fontType": "Default",
            "color": "Accent"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "üö¶New Status",
                                    "wrap": true,
                                    "weight": "Bolder"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "@{triggerBody()['text']}",
                                    "wrap": true,
                                    "spacing": "None"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "‚èÆÔ∏è Previous Status",
                                    "wrap": true,
                                    "weight": "Bolder"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "@{outputs('Get_item')?['body/Status/Value']}",
                                    "wrap": true,
                                    "spacing": "None"
                                }
                            ]
                        }
                    ],
                    "separator": true
                },
                {
                    "type": "TextBlock",
                    "text": "üìù Reason for status change",
                    "wrap": true,
                    "weight": "Bolder",
                    "separator": true
                },
                {
                    "type": "TextBlock",
                    "text": "@{triggerBody()['text_1']}",
                    "wrap": true,
                    "spacing": "None"
                }
            ]
        },
        {
            "type": "FactSet",
            "facts": [
                                {
                    "title": "Request ID",
                    "value": "@{outputs('Get_item')?['body/RequestID']}"
                },
                {
                    "title": "Supplier",
                    "value": "@{outputs('Update_item')?['body/Supplier/Value']}"
                },
                {
                    "title": "Item Name",
                    "value": "@{outputs('Update_item')?['body/Title']}"
                },
                {
                    "title": "Grand Total",
                    "value": "@{body('Format_number_-_Grand_Total')}"
                }
            ],
            "separator": true
        },
        {
            "type": "ActionSet",
            "separator": true,
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "iconUrl": "https://normanhurb-h.schools.nsw.gov.au/content/dam/doe/sws/schools/n/normanhurb-h/icons/sharepoint.png",
                    "url": "@{outputs('Update_item')?['body/{Link}']}",
                    "title": "View details of this Purchase Request"
                }
            ]
        }
    ]
}
