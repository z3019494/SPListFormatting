{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "margin": "5px"
  },
  "children": [
    {
      "elmType": "div",
      "style": {
        "width": "40px",
        "height": "40px",
        "border-radius": "50%",
        "display": "flex",
        "justify-content": "center",
        "align-items": "center",
        "font-size": "20px",
        "cursor": "pointer"
      },
      "attributes": {
        "class": "=if(@currentField , 'ms-bgColor-themePrimary ms-bgColor-themeDark--hover ms-fontColor-white' , 'ms-bgColor-neutralQuaternaryAlt ms-bgColor-neutralTertiaryAlt--hover ms-fontColor-neutralSecondary')",
        "iconName": "ShoppingCart"
      },
      "customRowAction": {
        "action": "setValue",
        "actionInput": {
          "MarkasPurchased": "=if(@currentField , '0' , '1' )",
          "Purchaser": "=if(@currentField, '', @me)",
          "StatusUpdates": "=if(@currentField,'‚ùåüõí This item has been unmarked as being Purchased','‚úÖüõí This item has been marked as Purchased')",
          "Status": "=if(@currentField , 'Not purchased' , 'Purchased' )"
        }
      }
    }
  ]
}
